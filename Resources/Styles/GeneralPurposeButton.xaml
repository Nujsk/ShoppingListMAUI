<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpggiftMAUI.Resources.Styles.GeneralPurposeButton">

    <Style TargetType="{x:Type Button}" x:Key="GeneralPurposeButton">
        <Setter Property="Margin" Value="0,10"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BackgroundColor" Value="#6e6e6e"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="MinimumWidthRequest" Value="100"/>
    </Style>
</ResourceDictionary>